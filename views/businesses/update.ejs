<%- include('../partials/header') %>

<h1 class="page-header">Update Business</h1>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <form action="/business/<%= business._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Business Name</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= business.title %>" required>
      </div>
      
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="location" value="<%= business.location %>" required>
      </div>
      
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="5" required><%= business.description %></textarea>
      </div>
      
      <div class="d-flex">
        <button type="submit" class="btn btn-primary me-2">Update Business</button>
        <a href="/business/<%= business._id %>" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>